# Therapy Practice Management System - Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration (Required)
# For Neon: postgresql://username:password@host/database?sslmode=require
# For local: postgresql://user:password@localhost:5432/therapy_db
DATABASE_URL=postgresql://your_username:your_password@your_host/your_database?sslmode=require

# Google OAuth Configuration (Required for Calendar Integration)
# Get these from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# AI Services (At least one is required)
# OpenAI API Key (Primary AI Service)
OPENAI_API_KEY=sk-your_openai_api_key

# Optional AI Services (for fallback)
ANTHROPIC_API_KEY=sk-ant-your_anthropic_key
GOOGLE_GEMINI_API_KEY=your_gemini_api_key
PERPLEXITY_API_KEY=pplx-your_perplexity_key

# Email Service (Optional)
SENDGRID_API_KEY=SG.your_sendgrid_api_key

# Server Configuration (Optional - for local development only)
# Do NOT set PORT for Cloud Run deployment - the platform provides it automatically
PORT=5000

# Session Secret (Required for production)
SESSION_SECRET=your_random_session_secret_here

# Deployment Configuration
# IMPORTANT: Set these ONLY as deployment environment variables, NOT in .env file
# NODE_ENV=production
# CI=true

# Build Configuration (for deployment optimization)
NPM_CONFIG_CACHE=/tmp/.npm-cache
NODE_OPTIONS=--max-old-space-size=4096

# Replit Environment (Auto-populated on Replit)
# REPLIT_DEV_DOMAIN=
# REPLIT_DOMAINS=

# ElevenLabs Voice API (Optional)
ELEVENLABS_API_KEY=your_elevenlabs_api_key

# Development Settings (for local development)
# NODE_ENV=development