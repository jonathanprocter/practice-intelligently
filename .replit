hidden = [".config", "node_modules", ".env"]
run = "npm run start:production 2>/dev/null || npx ts-node --transpile-only server/index.ts"
entrypoint = "server/index.ts"
modules = ["nodejs-18"]

[nix]
channel = "stable-23_11"

[deployment]
run = ["sh", "-c", "npm run start:production 2>/dev/null || npx ts-node --transpile-only server/index.ts"]
build = ["sh", "-c", "npx vite build --mode production && echo 'Client built successfully'"]

[packager]
language = "typescript"

[packager.features]
packageSearch = true
guessImports = true
enabledForHosting = true

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 43195
externalPort = 3003

[[ports]]
localPort = 44411
externalPort = 3002

[workflows]
runButton = "Run Application"

[[workflows.workflow]]
name = "Run Application"
author = 37925715
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
