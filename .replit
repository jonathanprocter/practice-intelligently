hidden = [".config", "node_modules", ".env"]
run = "node server/index.js"
entrypoint = "server/index.js"
modules = ["nodejs-18"]

[nix]
channel = "stable-23_11"

[deployment]
run = ["sh", "-c", "node server/index.js"]
build = ["sh", "-c", "npm install --legacy-peer-deps && npm run build:client"]
deploymentTarget = "cloudrun"

[packager]
language = "nodejs"

[packager.features]
packageSearch = true
guessImports = true
enabledForHosting = true

[[ports]]
localPort = 3001
externalPort = 3001
exposeLocalhost = true

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5173
externalPort = 3000

[[ports]]
localPort = 43195
externalPort = 3002

[workflows]
runButton = "Start Application"

[[workflows.workflow]]
name = "Start Application"
author = 37925715
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"node.*server\" 2>/dev/null || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"tsx.*server\" 2>/dev/null || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "lsof -ti:5000 | xargs kill -9 2>/dev/null || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "lsof -ti:3001 | xargs kill -9 2>/dev/null || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 3"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=development npx tsx server/index.js"
